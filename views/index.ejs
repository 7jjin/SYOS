  <body>
    <header id="main-header">
      <svg
        class="menu-button"
        xmlns="http://www.w3.org/2000/svg"
        x="0px"
        y="0px"
        width="36"
        height="36"
        viewBox="0 0 24 24"
      >
        <path
          d="M 3 5 A 1.0001 1.0001 0 1 0 3 7 L 21 7 A 1.0001 1.0001 0 1 0 21 5 L 3 5 z M 3 11 A 1.0001 1.0001 0 1 0 3 13 L 21 13 A 1.0001 1.0001 0 1 0 21 11 L 3 11 z M 3 17 A 1.0001 1.0001 0 1 0 3 19 L 21 19 A 1.0001 1.0001 0 1 0 21 17 L 3 17 z"
        ></path>
      </svg>
      <span id="logo">SYOS</span>
    </header>

    <!-- navBar -->
    <nav id="main-nav">
      <svg
        class="menu-button close"
        xmlns="http://www.w3.org/2000/svg"
        width="40px"
        height="40px"
        viewBox="0 0 24 24"
      >
        <path
          d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
        />
      </svg>
      <ul class="main-menu">
        <li>Home</li>
        <li>Board</li>
        <li>Recommend</li>
        <li>MyPage</li>
        <li class="divider"><div class="under-line"></div></li>
      </ul>
      <ul class="sub-menu">
        <li>About</li>
        <li>Contact</li>
        <li>LogIn</li>
      </ul>
    </nav>

    <div class="main-text-wrapper">
      <div class="main-text">Find a desktop setup</div>
      <div class="main-text">that suits your taste!</div>
      <div id="board-button">Get Started</div>
    </div>

    <!-- swiper -->
    <div class="swiper">
      <div class="swiper-wrapper">
        <div class="swiper-slide one">
          <img class="swiper-img" src="../images/desk1.jpg" alt="desk" />
        </div>
        <div class="swiper-slide two">
          <img class="swiper-img" src="../images/desk3.jpg" alt="desk" />
        </div>
        <div class="swiper-slide three">
          <img class="swiper-img" src="../images/desk4.jpg" alt="desk" />
        </div>
        <div class="swiper-slide four">
          <img class="swiper-img" src="../images/desk5.jpg" alt="desk" />
        </div>
        <div class="swiper-slide five">
          <img class="swiper-img" src="../images/desk2.jpg" alt="desk" />
        </div>
        <div class="swiper-slide">
          <img class="swiper-img" src="../images/desk6.jpg" alt="desk" />
        </div>
        <div class="swiper-slide">
          <img class="swiper-img" src="../images/desk7.jpg" alt="desk" />
        </div>
      </div>
    </div>

    <div id="tag-wrapper">
      <span class="tag">#Modern</span>
      <span class="tag">#Office</span>
      <span class="tag">#Study</span>
      <span class="tag">#Natural</span>
    </div>

    <div id="recommend-wrapper">
      <div id="recommend-text-wrapper">
        <div class="recommend-text">Get a better work</div>
        <div class="recommend-text">experience with</div>
        <div class="recommend-text">recommendations</div>
      </div>
      <div id="recommend-button">Get Started</div>
    </div>
