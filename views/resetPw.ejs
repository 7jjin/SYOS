<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <title>Reset Password</title>
    <link rel="stylesheet" href="../css/global.css" />
    <link rel="stylesheet" href="../css/resetPw.css" />
  </head>
  <body>
    <header id="main-header">
      <svg
        class="menu-button"
        width="40px"
        height="40px"
        focusable="false"
        viewBox="0 0 24 24"
      >
        <path d="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z"></path>
      </svg>
      <span id="logo">SYOS</span>
      <span style="width: 40px; margin: 2rem"></span>
    </header>

    <!-- navBar -->
    <nav id="main-nav">
      <svg
        class="menu-button close"
        xmlns="http://www.w3.org/2000/svg"
        width="40px"
        height="40px"
        viewBox="0 0 24 24"
      >
        <path
          d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"
        />
      </svg>
      <ul class="main-menu">
        <li>Home</li>
        <li>Board</li>
        <li>Recommend</li>
        <li>MyPage</li>
        <li class="divider"><div class="under-line"></div></li>
      </ul>
      <ul class="sub-menu">
        <li>About</li>
        <li>Contact</li>
        <li>LogIn</li>
      </ul>
    </nav>

    <!-- resetPw -->

    <main class="resetPw">
      <div class="welcome">Reset Password</div>

      <div class="allDiv">
        <div class="emailDiv">
          <input type="text" id="email" placeholder="Email" />
          <button type="button" id="send">Send</button>
        </div>

        <div class="authDiv">
          <input type="text" id="authNum" placeholder="Authentication number" />
          <button type="button" id="auth">Authentication</button>
        </div>

        <div class="pwDiv">
          <input type="password" id="pw" placeholder="Password" />
          <button type="button" id="submit">submit</button>
        </div>
      </div>
    </main>

    <!-- resetPw -->

    <script src="../js/menu.js"></script>
    <script src="../js/resetPw.js"></script>
  </body>
</html>
