    </div>

    <!-- board -->
    <div class="board-page">
      <div class="post-container">
        <div class="post-content">
          <div class="post-contentbox">
            <div class="post-header">
              <div class="header-nickname"></div>
              <div class="header-md">
                <div id="modify" class="manipulation-button">modify</div>
                <div id="delete" class="manipulation-button">delete</div>
              </div>
            </div>

            <div class="post-img-wrapper">
              <img class="post-img" alt="desk" />
            </div>
            <div class="post-res">
              <span
                ><i class="fa-regular fa-heart"></i
                ><span id="heart-number" class="number"></span
              ></span>
              <span
                ><i class="fa-regular fa-comment fa-flip-horizontal"></i
                ><span id="comment-number" class="number"></span
              ></span>
            </div>

            <div class="post-text">
              <span id="post-content"></span>
            </div>

            <hr class="hr-1" />

            <div class="comments-text">
              <span>Comments</span>
            </div>

            <form class="comments">
              <input
                type="text"
                class="comments-input"
                id="comments"
                placeholder="Enter Comments"
              />
              <button type="submit" onclick="addComment(event)">Enter</button>
            </form>

            <ul id="comment-list"></ul>
          </div>
        </div>
      </div>
    </div>

